{
    "manifest_version": 2,

    "name": "Torrque",
    "description": "Easy Pb mirror",
    "version": "1.0",

    "browser_action": {
        "default_icon": "assets/icon.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "https://*/"
    ],

    "browser_action": {
        "default_icon": "assets/torrque.png",
        "default_popup": "index.html",
        "default_title": "Torrque"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
