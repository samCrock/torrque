{
  "manifest_version": 2,
  "name": "Torrque",
  "description": "Torrent search wrapper",
  "version": "0.0.1",
  "author": "Sam Lombardi",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "assets/torrque.png",
    "default_title": "Torrque - Torrent Search",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    "*",
    "assets/*",
    "images/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "main.js",
        "polyfills.js",
        "runtime.js",
        "vendor.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*.cors-anywhere.herokuapp.com/"
  ],
  "background": {
    "scripts": ["scripts.js"]
}
}
